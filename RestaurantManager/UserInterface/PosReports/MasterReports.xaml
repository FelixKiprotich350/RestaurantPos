<Page xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"  x:Class="RestaurantManager.UserInterface.PosReports.MasterReports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestaurantManager.UserInterface.PosReports"
      mc:Ignorable="d" Loaded="Page_Loaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MasterReports">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <ListView x:Name="Listview_ReportHeads" SelectionChanged="Listview_ReportHeads_SelectionChanged">
                <ListViewItem x:Name="Item_SalesReports" Content="Sales"/>
                <ListViewItem Content="Tickets"/>
                <ListViewItem Content="Payments"/>
                <ListViewItem Content="Users"/>
                <ListViewItem Content="Analysis"/>
            </ListView>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            <Frame x:Name="Frame_ReportArea"/>
        </Grid>
    </Grid>
</Page>
