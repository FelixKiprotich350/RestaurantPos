<Window x:Class="RestaurantManager.UserInterface.Warehouse.EditDiscount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantManager.UserInterface.Warehouse"
        mc:Ignorable="d" WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        Title="Edit Discount" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,10,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Label Content="Current Status"/>
            <TextBlock Text="" FontSize="14"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Content="Change To"/>
            <ComboBox />
        </StackPanel>
        <UniformGrid Grid.Row="2" Columns="2" Margin="0,8,0,0"> 
            <Button Content="Close" Style="{DynamicResource Button_Cancel}"/>
            <Button Content="Change" Style="{DynamicResource Button_Accept}"/>
        </UniformGrid>
        
    </Grid>
</Window>
