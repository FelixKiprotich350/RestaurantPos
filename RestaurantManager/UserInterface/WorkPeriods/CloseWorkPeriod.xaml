<Window x:Class="RestaurantManager.UserInterface.WorkPeriods.CloseWorkPeriod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestaurantManager.UserInterface.WorkPeriods"
      mc:Ignorable="d" Width="300" Height="200"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
      Title="Close Work Period">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/> 
        </Grid.RowDefinitions>
        <TextBlock Text="Do you want to close the Work Period ?" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <UniformGrid Rows="1" Columns="2" >
                <Button x:Name="Button_Cancel" Style="{StaticResource Button_Cancel}" Content="No" Margin="4" Height="Auto" Width="100" Click="Button_Cancel_Click" IsCancel="True"/>
                <Button x:Name="Button_Accept" Style="{StaticResource Button_Accept}" Content="Yes" Height="Auto" Width="100" Click="Button_Accept_Click" IsDefault="True"/>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
